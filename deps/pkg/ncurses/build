#!/bin/bash

source "${deps}/pkg/common"

src=ncurses-6.0.tar.gz
sha1=acd606135a5124905da770803c05f1f20dd3b21c
url="http://ftp.gnu.org/pub/gnu/ncurses/${src}"

fetch $src $sha1 $url

mkdir ${work}
cd ${work}
tar xf "${files}/${src}"
cd ncurses-*

extra_config=''

case "${host_triplet}" in
	*mingw*)
		export PATH_SEPARATOR=";"
		extra_config="${extra_config}
			--disable-home-terminfo
			--disable-termcap
			--enable-term-driver
			--enable-database
			--enable-sp-funcs
			--enable-interop
		"
		;;
	*)
		extra_config="${extra_config}
			--with-terminfo-dirs=/usr/share/terminfo:/etc/terminfo:/lib/terminfo
			--with-default-terminfo-dir=/usr/share/terminfo
			--without-gpm
			--without-dlsym
		"
		;;
esac

./configure \
	--prefix=${prefix} \
	--host=${host_triplet} \
	--without-shared \
	${extra_config} \
	LDFLAGS="-L${prefix}/lib ${LDFLAGS}" \
	CPPFLAGS="-I${prefix}/include"

make ${MAKEFLAGS} install

cd "${deps}"; rm -rf "${work}"
